{
  "name": "spa-server-template",
  "version": "0.0.1",
  "description": "",
  "main": "Application.ts",
  "engines": {
    "node": "18.16.1"
  },
  "private": true,
  "scripts": {
    "build": "tsoa spec-and-routes && npx tsc",
    "start": "node build/src/Application.js",
    "dev": "concurrently \"tsoa spec-and-routes\" \"npx tsc --watch\" \"nodemon -q ./build/src/Application.js\"",
    "format": "prettier -u --check .",
    "format:fix": "prettier -u --write .",
    "clean": "concurrently \"rm -rf ./build\" \"rm -rf ./src/tsoa-routes.ts\" \"rm -rf ./spec\"",
    "migration": "prisma migrate dev --name init"
  },
  "author": "Deem3",
  "dependencies": {
    "@prisma/client": "^5.3.1",
    "@types/cors": "^2.8.14",
    "@types/crypto-js": "^4.1.2",
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.3",
    "@types/swagger-ui-express": "^4.1.3",
    "concurrently": "^8.2.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "prisma": "^5.3.1",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.1",
    "tsoa": "^5.1.1",
    "typescript": "^5.2.2",
    "uuid": "^9.0.1"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "devDependencies": {
    "@types/morgan": "^1.9.5"
  }
}
