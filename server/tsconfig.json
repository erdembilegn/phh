{
  "compilerOptions": {
    "declaration": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "bin"]
}
